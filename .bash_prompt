#!/usr/bin/env bash

# GIT FUNCTIONS
git_branch() {
    git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# TERMINAL PROMPT
PS1="\[\e[0;93m\]\$(whoami | cut -c 1-11)\[\e[m\]"    # username
PS1+=" "    # space
PS1+="\[\e[0;91m\]\W\[\e[m\]"    # current directory
PS1+="\[\e[0;90m\]\$(git_branch)\[\e[m\]"    # current branch
PS1+=" "    # space
PS1+="‚ùØ "    # end prompt
export PS1;

export CLICOLOR=1;
export LSCOLORS=ExFxBxDxCxegedabagacad;
